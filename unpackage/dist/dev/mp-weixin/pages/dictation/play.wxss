
.play-container {
  padding: 30rpx;
  min-height: 100vh;
  background: #f7f7f7;
}
.top-info {
  display: flex;
  justify-content: space-between;
  margin-bottom: 30rpx;
  color: #666;
}
.speak-box {
  display: flex;
  justify-content: center;
  margin: 30rpx 0;
}
.input-box {
  margin: 20rpx 0 40rpx;
}
.answer-input {
  background: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  font-size: 30rpx;
}
.progress-bar {
  height: 16rpx;
  background: #eee;
  border-radius: 8rpx;
  overflow: hidden;
}
.progress-fill {
  height: 100%;
  background: #007aff;
  width: 0;
  transition: width 0.25s ease;
}
.result {
  margin: 24rpx 0;
  text-align: center;
}
.result .ok {
  color: #07c160;
}
.result .wrong {
  color: #fa5151;
}
.bottom {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  padding: 20rpx;
  background: #fff;
  box-shadow: 0 -6rpx 20rpx rgba(0, 0, 0, 0.06);
}
