
.mine-container {
  background-color: #f5f5f5;
  min-height: 100vh;
}
.user-info {
  background-color: #ffffff;
  padding: 40rpx 30rpx;
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}
.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  margin-right: 30rpx;
}
.user-details {
  flex: 1;
}
.username {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 10rpx;
}
.user-desc {
  font-size: 28rpx;
  color: #999;
}
.menu-list {
  background-color: #ffffff;
}
.menu-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}
.menu-item:last-child {
  border-bottom: none;
}
.menu-icon {
  font-size: 40rpx;
  margin-right: 20rpx;
}
.menu-text {
  flex: 1;
  font-size: 32rpx;
  color: #333;
}
.menu-arrow {
  font-size: 32rpx;
  color: #ccc;
}
